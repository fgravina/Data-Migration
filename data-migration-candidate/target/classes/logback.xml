<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<!-- <Pattern>%date [%thread] %-5level %logger{36} - %msg%n</Pattern>  -->
			<Pattern>%date [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">		
		<file>C:/Apps/data-migration/logs/data-migration-candidate.log</file>
		
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->      		
      		<fileNamePattern>C:/Apps/data-migration/logs/data-migration-candidate.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      		
      		 <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
          		<!-- or whenever the file size reaches 500MB -->
        		<maxFileSize>500MB</maxFileSize>
      		</timeBasedFileNamingAndTriggeringPolicy>
      		<!-- keep 30 days' worth of history -->
      		<maxHistory>30</maxHistory>
    	</rollingPolicy>
		
		<layout class="ch.qos.logback.classic.PatternLayout">      
			<!--  <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>  -->
			<pattern>%date %-5level %logger{35}: %msg%n</pattern>
		</layout> 
	</appender>
	
	<logger name="org.springframework" level="ERROR">
		<appender-ref ref="FILE"/>	
	</logger>	
	
	<logger name="org.springframework.web" level="ERROR" additivity="false">
		<appender-ref ref="FILE"/>	
	</logger>	
	
	<logger name="com.gigroup.data.migration.candidate" level="DEBUG" additivity="false">
		<appender-ref ref="FILE"/>	
	</logger>	
	
	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>